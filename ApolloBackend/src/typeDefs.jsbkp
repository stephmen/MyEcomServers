const { gql } = require('apollo-server');

const typeDefs = gql`
#import * from '../generated/prisma.graphql'
  type Mutation {
  createItem(title: String!, description: String, price: Int, image: String, largeImage: String): Item!
}
type Query {
  items: [Item]!
}
type User {
  id: ID! @id
  name: String!
  lastname: String
  email: String
}

`;

module.exports = typeDefs;
